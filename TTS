import requests
import pyttsx3

API_KEY = "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"
API_URL = "https://api.groq.com/openai/v1/chat/completions"

engine = pyttsx3.init()
engine.setProperty("rate", 170)
voices = engine.getProperty('voices')
engine.setProperty('voice', voices[1].id) 

def speak(text):
    engine.say(text)
    engine.runAndWait()

def chat(msg):
    headers = {
        "Authorization": f"Bearer {API_KEY}",
        "Content-Type": "application/json"
    }
    data = {
        "model": "meta-llama/llama-4-scout-17b-16e-instruct",
        "messages": [
            {"role": "system", "content": "You're a fun chef who teaches Python like cooking recipes. Be silly, casual, and talk like a funny best friend."},
            {"role": "user", "content": msg}
        ]
    }
    r = requests.post(API_URL, headers=headers, json=data)
    if r.status_code == 200:
        return r.json()["choices"][0]["message"]["content"]
    return "Oops! Something went wrong... I probably burned the code!"

if __name__ == "__main__":
    print("üç≥ Yo yo! ChefCat's in the kitchen! Type 'exit' when your stomach is full.")
    while True:
        user = input("You: ")
        if user.lower() == "exit":
            bye = "üßÅ Byeee! Come back soon for more code snacks!"
            print(f"üç≥ ChefCat says: {bye}")
            speak(bye)
            break
        reply = chat(user)
        print(f"üç≥ ChefCat says: {reply}")
        speak(reply)
